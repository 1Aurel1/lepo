<div id="dashboard-resource" class="scroll-pane">
  <div class="row">
    <div class="col-md-12 block">
      <% if @cards.size == 0 %>
      <%= render partial: 'layouts/system_message', locals: {message: t('.no_dashboard_resources'), message_category: 'info'} %>
      <% else %>
      <% @cards.each do |card| %>
      <div class="card">
        <h2 class="card-header"><%= card[:header] %></h2>
        <div class="card-body">
          <p class="card-text">
            <%= card[:content] %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <% if card[:list] %>
          <% card[:list].each do |li| %>
          <li class="list-group-item">
            <% if li[:lesson_id] %>
            <!--  for lesson related links -->
            <%= link_to(li[:title], {controller: li[:controller], action: li[:action], nav_section: li[:nav_section], nav_id: li[:nav_id], lesson_id: li[:lesson_id], page_num: li[:page_num]}, {remote: true}) %>
            <% else %>
            <!--  for course related links -->
            <%= link_to(li[:title], {controller: li[:controller], action: li[:action], nav_section: li[:nav_section], nav_id: li[:nav_id]}, {remote: true}) %>
            <% end %>
          </li>
          <% end %>
          <% end %>
        </ul>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
