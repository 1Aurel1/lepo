<div id="course-resource" class="scroll-pane">
  <div class="row" id="edit-course">
    <div class="col-md-12">
      <% if action_name == 'destroy' && @course.nil? %>
      <%= render partial: 'layouts/system_message', locals: {message: t('controllers.courses.deleted'), message_category: 'info'} %>
      <% else %>
      <h1>コースの編集</h1>
      <%= render partial: 'form' %>
      <%= render partial: 'option_form' if @course.staff? session[:id] %>
      <% end %>
    </div>
  </div>
</div>
