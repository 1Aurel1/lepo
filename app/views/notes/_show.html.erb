<div id="note-resource" class="scroll-pane">
  <div class="row">
    <div class="col-md-12">
      <div class="block">
        <%= render partial: 'notes/header' %>
        <div id="items">
          <%= render partial: 'notes/item', collection: @note_items, locals: {editable_snippet: false} %>
        </div>
      </div>

      <% references = @note.references %>
      <% unless references.size.zero? %>
      <div id="references" class="block">
        <h1><%= t('.references') %></h1>
        <ol>
          <% references.each do |ref| %>
          <li><%= display_title ref %>, <%= link_to(ref.url, ref.url, { target: '_blank'}) %> (<%= ref.created_at.strftime('%Y年%-m月%-d日') %>閲覧)</li>
          <% end %>
        </ol>
      </div>
      <% end %>

    </div>
  </div>
</div>

<% if @note.category == 'work' && @note.status='original_ws' %>
<div id="sticky-panel">
  <%= render partial: 'stickies/sticky_panel', locals: { stickies: @stickies } %>
</div>
<% end %>
