<div id="<%= 'link_'+link.id.to_s %>" class="associated-object">
  <table>
    <tr>
      <th class="draggable-symbol"><i class="fa tentative-grip"></i></th>
      <th class="serial-number"><%= link.display_order %>.</th>
      <th class="title"><%= sanitize link.title %>, <%= link.url %></th>
      <td class="l120px"><%= l(link.updated_at, foramt: :default) %></td>
      <td class="r80px">
        <%= render partial: 'layouts/buttons/delete', locals: {action_hash: {action: 'ajax_destroy', link_id: link.id}, id_attr: '', class_attr: 'bright-link'} %>
      </td>
    </tr>
  </table>
</div>
