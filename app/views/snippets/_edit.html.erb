<% form_id = 'update-form-' + display_order.to_s %>
<div id="<%= form_id %>" class="to-be-hidden">
  <%= form_for snippet, url: {controller: :snippets, action: :ajax_update, id: snippet.id, note_id: note_id}, html: {id: 'snippet-form', class: 'form-horizontal', name: 'snippet-form', multipart: true}, remote: true do |f| %>
  <%= render partial: 'snippets/form', locals: {snippet: snippet, f: f, form_id: form_id, category: snippet.category} %>
  <% end %>
</div>


<script>
$(function() {
  $("#cancel-<%= form_id %>").click(function(){toggleUpdateSnippet(<%= snippet.id %>, <%= display_order %>);});
  $("#update-snippet-btn-<%= display_order %>").click(function(){toggleUpdateSnippet(<%= snippet.id %>, <%= display_order %>);});
});
</script>
